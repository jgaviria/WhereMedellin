<h2>Editar Usuario</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: 'Correo' %>
    <%= f.input :password, autocomplete: "off", hint: "dejalo en blanco si no lo quieres cambiar", required: false, label: 'Clave' %>
    <%= f.input :password_confirmation, required: false, label: 'Confirmar Clave' %>
    <%= f.input :current_password, hint: "necesitamos tu clave actual para confirmar tus cambios", required: true, label: 'Clave Actual' %>
  </div>

  <div class="form-actions">
    <%= f.submit :Editar, class: 'btn btn-success' %>
    <div class="btn btn-primary">
      <%= link_to 'ATRAS', :back %>
    </div>
  </div>

<% end %>


