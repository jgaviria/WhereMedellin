<div class="grandParentContaniner">
  <div class="parentContainer">
    <h2>Crear Usuario</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, label: 'Correo' %>
        <%= f.input :password, required: true, label: 'Clave', hint: ("minimo #{@minimum_password_length} letras" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true, label: 'Confirmar Clave' %>
      </div>

      <div class="form-actions">
        <%= f.submit :Crear, class: 'btn btn-success' %>
        <div class="btn btn-primary">
          <%= link_to 'ATRAS', :back %>
        </div>
      </div>
    <% end %>
  </div>
</div>

